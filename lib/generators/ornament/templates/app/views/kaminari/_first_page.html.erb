<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%= content_tag :span, :class => [ "pagination--jump", "pagination--jump-back", "pagination--jump-back-first", (current_page.first? ? "pagination--jump-disabled" : nil) ] do %>
  <%= link_to_unless current_page.first?, t('views.pagination.first').html_safe, url, :remote => remote do %>
    <span><%= t('views.pagination.first').html_safe %></span>
  <% end %>
<% end %>
